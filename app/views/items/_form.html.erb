<div class="ui container center aligned">
  <%= form_for(item) do |f| %>
    <% if item.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

        <ul>
        <% item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="ui form">
      <div class="field">
        <p><%= f.label :name %></p>
        <%= f.text_field :name, placeholder: "Enter Item Name" %>
      </div>
      <div class="field">
        <p><%= f.label :price %></p>
        <%= f.text_field :price, placeholder: "Enter Item Price, i.e. $24.99" %>
      </div>
      <div class="field">
        <p><%= f.label :description %></p>
        <%= f.text_field :desc, placeholder: "Write a Short Description" %>
      </div>
      <div class="field">
        <p><%= f.label :picture %></p>
        <%= f.text_field :picture, placeholder: "Enter URL" %>
      </div>

      <div class="actions">
        <%= f.submit nil, class: "ui button" %>
      </div>
    </div>
  <% end %>
</div>
